<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button Styles -->
    <style name="ConnectButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/connect_blue_color</item>
        <item name="colorControlHighlight">@color/selected_blue_color</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="colorAccent">@color/selected_blue_color</item>
    </style>

    <style name="DisconnectButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/red_color</item>
        <item name="android:textColor">@color/white_text_color</item>
        <item name="colorControlHighlight">@color/selected_red_color</item>
    </style>

</resources>
